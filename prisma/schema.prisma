generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id String @unique @default(cuid())
  name String
  email String @unique
  phone String
  password String
  emailVerified Boolean @default(false)
  createdAt DateTime @default(now())
  updateAt DateTime @updatedAt
}





